{
	"env": {
		"browser": true,
		"es6": true,
		"commonjs": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["prettier"],
	"globals": {
		"chrome": "readonly",
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": ["warn"],
		"no-undef": ["warn"],
		"no-console": ["warn"]
	}
}
