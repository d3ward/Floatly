{
  "manifest_version": 2,
  "name": "Floatly",
  "version": "1.0.0",
  "description": "Floatly is an awesome floating button that brings quick actions to any website.",
  "permissions": ["tabs", "clipboardWrite","storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }],
  "browser_action": {
    "default_icon": "icons/icon256.png"
  },
  "icons": { "20": "icons/icon20.png",
    "48": "icons/icon48.png",
   "152": "icons/icon152.png" }
}